token = 'IkCWCgYCQyYduQYjBjDiTZCQLBXzLNdN'
headers = {'token': token}

params = {
    'datasetid': 'GHCND',
    'stationid': 'GHCND:USW00014732',  # LaGuardia Airport
    'startdate': '2022-01-01',
    'enddate': '2022-12-31',
